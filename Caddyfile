localhost:8080 {
    respond "CDN ACTIVE!"
}

ybt.net.tr {
    # Reverse proxy Plesk sunucusuna yönlendiriliyor
    reverse_proxy 213.238.180.207 {
        header_up Host {host}
        header_up X-Real-IP {remote}
    }

    # Güvenlik başlıkları ekleniyor
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # İçerik sıkıştırması aktifleştiriliyor
    encode gzip zstd

    # Statik dosyalar için özel cache yönlendirmesi
    @staticFiles path_regexp \.(?:js|css|png|jpg|jpeg|gif|svg|woff2?|ttf|eot)$
    header @staticFiles {
        Cache-Control "public, max-age=86400"
    }

    # Let's Encrypt üzerinden otomatik TLS sağlama
    tls {
        bilgi@ugursahin.net.tr
    }
}
